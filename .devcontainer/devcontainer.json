{
  "name" : "Naeural Edge Protocol SDK Development Container",
  
  "dockerFile" : "Dockerfile",
  
  "runArgs": [
    //"--gpus=all", // Uncomment this line to enable GPU support
    "--hostname",
    "nepsdk"    
  ],

 "mounts": [
    "source=naeural-sdk-config,target=/root/.naeural,type=volume"
  ],


  "customizations": {
    "vscode" : {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter"
      ]
    }
  }
}